
<h1>My Posts</h1>
{{#each blogs as |blog|}}
<div class="row justify-content-md-center">
      <div class="card col-md-8">
        <div class="card-header"style="
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: space-between;
    ">
          <h4>{{title}}</h4>
          <h6>{{date_created}}</h6>
        </div>
        
        <div class="card-body">
          
          <p class="card-text">{{description}}</p>
          
        </div>
      </div>
    </div>
{{/each}}  

<div class="row justify-content-md-center">
<div class="card col-md-1">
<a class="btn btn-primary" href="/newBlog" role="button">New Post</a>
</div>
</div>
